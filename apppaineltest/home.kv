#:import switch_click kivy.uix.switch.Switch

WindowManager:
    FirstWindow:
    SecondWindow:


<FirstWindow>:
    name: "first"


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image:
            source: 'logoiot.png'
            elevation: 20
            size_hint: (0.5, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        Button:
            text: " > "
            font_size: 50
            size: 70, 70
            size_hint: None, None
            background_color: (1.0, 0.0, 0.0, 1.0)
            pos_hint: {'center_x': 0.9, 'center_y': 0.15}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    GridLayout:
        cols: 2
        rows: 8

        Label:
            orientation: "vertical"
            halign: "center"
            bold: True
            text: "Peixes"
            font_size: 25
            width: "200dp"
            height: "70dp"
            size_hint: None, None
            color: "#BF42F5"
        Switch:
            id: switchpeixes
            background_color: (1, 0, 0, 1)
            pos: 50, 50
            size_hint: None, None
            size: 100, 50
            active: False
            font_size: 40
            on_active: root.switchpeixes(self, self.active)

        Label:
            orientation: "vertical"
